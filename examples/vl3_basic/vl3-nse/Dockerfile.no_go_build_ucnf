ARG VPP_AGENT

FROM ${VPP_AGENT} as runtime
COPY vl3_nse /bin/cnf-vppagent
RUN rm /opt/aio-agent/dev/etcd.conf; echo 'Endpoint: "0.0.0.0:9113"' > /opt/aio-agent/dev/grpc.conf; echo "disabled: true" > /opt/aio-agent/dev/linux-plugin.conf; echo "disabled: true" > /opt/aio-agent/dev/telemetry.conf
COPY ./etc/ /etc/
COPY etc/supervisord/supervisord.conf /opt/aio-agent/dev/supervisor.conf
ENV SUPERVISOR_CONFIG=/opt/aio-agent/dev/supervisor.conf
